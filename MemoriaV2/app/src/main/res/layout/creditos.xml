<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/Boton_atrasC"
                android:text="@string/botonAtras"
                android:onClick="cerrarCreditos"/>
        </TableRow>
        <Space android:layout_height="60sp"
            android:layout_width="match_parent"/>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/instrucciones"
                android:text="@string/creditos"
                android:textSize="20sp"
                android:paddingLeft="10sp"
                android:layout_weight="1">
            </TextView>
        </TableRow>
        <Space android:layout_height="5sp"
            android:layout_width="match_parent"/>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="right">

            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Imagen"
                android:src="@drawable/logo_blanco"/>

        </TableRow>



    </TableLayout>
</FrameLayout>