<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Space
        android:layout_width="match_parent"
        android:layout_height="12sp" />
    <TextView
        android:text="Puntuaciones mas altas"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Space android:layout_height="30sp"
            android:layout_width="match_parent"/>

        <TableRow>
            <Button
               android:layout_width="fill_parent"
                android:id="@+id/Boton_atrasP"
                android:text="@string/botonAtras"
                android:textSize="30sp"
                android:onClick="cerrarPuntuaciones"/>
        </TableRow>

        <Space android:layout_height="70sp"
            android:layout_width="match_parent"/>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:text="  4 X 4:  "
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/HighScore1"
                android:textSize="30sp">
            </TextView>
        </TableRow>


        <Space android:layout_height="30sp"
            android:layout_width="match_parent"/>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:text="  4 X 5:  "
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/HighScore2"
                android:textSize="30sp">
            </TextView>
        </TableRow>


        <Space android:layout_height="30sp"
            android:layout_width="match_parent"/>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:text="  4 X 6:  "
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/HighScore3"
                android:textSize="30sp">
            </TextView>
        </TableRow>

    </TableLayout>
    </LinearLayout>
</ScrollView>